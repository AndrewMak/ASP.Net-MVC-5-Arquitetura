@model IEnumerable<VG.Profissional.Aplicacao.ViewModels.ApresentacaoViewModel>

@{
    ViewBag.Title = "Lista de Apresentações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CurriculoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Texto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Curriculo.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Texto)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ApresentacaoId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.ApresentacaoId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.ApresentacaoId })
        </td>
    </tr>
}

</table>
