@model IEnumerable<VG.Profissional.Aplicacao.ViewModels.FerramentaViewModel>

@{
    ViewBag.Title = "Lista de Ferramentas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CurriculoId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Curriculo.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.FerramentaId }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.FerramentaId }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.FerramentaId })
        </td>
    </tr>
}

</table>
